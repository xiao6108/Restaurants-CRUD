<div class="jumbotron" style="background-color: #343A40; color: white">
  <div class="container-fluid">
    <form action="/Restaurants" method="POST" class="font-weight-light">
      <!-- 餐廳中文名稱  -->
      <label for="name" class="col-sm-2 col-form-label">餐廳名稱</label>
      <div class="col-sm-10">
        <input type="name" name="name" class="form-control" id="name" placeholder="中文名稱">
      </div>

      <!-- 餐廳分類  -->
      <label for="category" class="col-sm-2 col-form-label">餐廳類別</label>
      <div class="col-sm-10">
        <input type="text" name="category" class="form-control" id="category" placeholder="日本料理、港式料理">
      </div>

      <!-- 餐廳照片網址  -->
      <label for="image" class="col-sm-2 col-form-label">餐廳照片網址</label>
      <div class="col-sm-10">
        <input type="text" name="image" class="form-control" id="image"
          placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5630/04.jpg">
      </div>

      <!-- 餐廳評分  -->
      <label for="rating" class="col-sm-2 col-form-label">餐廳評分</label>
      <div class="col-sm-6">
        <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1"
          placeholder="4.5">
      </div>

      <!-- 餐廳簡介  -->
      <label for="description" class="col-sm-2 col-form-label">餐廳簡介</label>
      <div class="col-sm-10">
        <textarea name="description" id="description" cols="50" rows="3"></textarea>
      </div>


      <div>
        <a class="btn btn-secondary" style="margin: 0px 5px 0px 15px" href="/">〈 返回選單</a>
        <button type="submit" class="btn btn-secondary" id="createItem">提交</button>
      </div>

    </form>
  </div>
</div>