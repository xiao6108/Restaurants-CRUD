<div class="jumbotron" style="background-color: #343a40; color: #f2f4f7">
  <div class="container-fluid">
    <form action="/Restaurants/{{data.id}}?_method=PUT" method="POST" class="font-weight-light">
      <div class="form-group row">
        <h1>你正在修改{{ data.name }}</h1>
      </div>
      <!--餐廳名稱-->
      <div class="form-group row">
        <label for="name" class="col-form-label">餐廳名稱</label>
        <div class="col-sm-4">
          <input type="name" name="name" class="form-control align-self-center" id="name" value="{{{data.name}}}">
        </div>
      </div>
      <!--餐廳分類-->
      <div class="form-group row">
        <label for="name" class="col-form-label">餐廳分類</label>
        <div class="col-sm-4">
          <input type="name" name="category" class="form-control align-self-center" id="category" value="{{{data.category}}}">
        </div>
      </div>
      <!--餐廳圖片-->
      <div class="form-group row">
        <label for="name" class="col-form-label">餐廳圖片</label>
        <div class="col-sm-4">
          <input type="name" name="image" class="form-control align-self-center" id="image" value="{{{data.image}}}">
        </div>
      </div>
      <!--餐廳地址-->
      <div class="form-group row">
        <label for="name" class="col-form-label">餐廳地址</label>
        <div class="col-sm-4">
          <input type="name" name="location" class="form-control align-self-center" id="location" value="{{{data.location}}}">
        </div>
      </div>
      <!--餐廳電話-->
      <div class="form-group row">
        <label for="name" class="col-form-label">餐廳電話</label>
        <div class="col-sm-4">
          <input type="text" name="phone" class="form-control align-self-center" id="phone" value="{{{data.phone}}}">
        </div>
      </div>
      <!--餐廳評分-->
      <div class="form-group row">
        <label for="name" class="col-form-label">餐廳評分</label>
        <div class="col-sm-4">
          <input type="number" name="rating" class="form-control align-self-center" id="rating" value="{{{data.rating}}}">
        </div>
      </div>
      <!--餐廳Map-->
      <div class="form-group row">
        <label for="name" class="col-form-label">餐廳Map</label>
        <div class="col-sm-4">
          <input type="text" name="google_map" class="form-control align-self-center" id="google_map" value="{{{data.google_map}}}">
        </div>
      </div>
      <!--餐廳簡述-->
      <div class="form-group row">
        <label for="name" class="col-form-label">餐廳簡述</label>
        <div class="col-sm-4">
          <textarea name="description" id="description" cols="42" rows="5" style="margin-left: 10px">{{{data.description}}}</textarea>
        </div>
      </div>
      <div class="col-sm-10">
        <a class="btn btn-secondary" style="margin: 0px 5px 0px 15px" href="/">〈 返回選單</a>
        <button type="submit" class="btn btn-secondary" id="createItem">更改</button>
      </div>


    </form>
  </div>
</div>