<div class="container-fluid">
  <div class="row">
    <a class="btn btn-secondary" href="/Restaurants/new">新增餐廳 +</a>
  </div>
  <div class="row">
    {{#each data}}
    <!--餐廳列表-->
    <div class="card text-white bg-dark mb-3" style="max-width: 14rem;">
      <div>
        <form action="/Restaurants/{{this._id}}/delete" method="POST">
          <button type="submit" class="cross">✗</button>
          <img class="card-img-top" style="height: 10rem;" src="{{this.image}}" alt="{{this.name}}">
        </form>
      </div>
      <div class="card-header">{{this.name}}</div>
      <div class="card-body">
        <h5 class="card-title">{{this.category}}</h5>
        <p>{{this.rating}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>

</div>
</div>